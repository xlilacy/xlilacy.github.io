---
import { ViewTransitions } from 'astro:transitions';
import BaseHead from '../components/BaseHead.astro';
import Footer from '../components/Footer.astro';
import Animations from '../components/Animations.astro';
import Snow from '../components/Snow.astro';
import ThemeScript from '../components/ThemeScript.astro';

interface Props {
  title: string;
  description?: string;
  lang?: string;
  image?: string;
}

const { 
  title, 
  description = 'A personal blog about writing and daydreaming',
  lang = 'es',
  image = '/images/social.jpg'
} = Astro.props;
---

<!DOCTYPE html>
<html lang={lang}>
  <head>
    <BaseHead title={title} description={description} image={image} />
    <ViewTransitions />
    <ThemeScript />
  </head>
  <body>
    <header>
      <h1><a href="/">daydreamer</a></h1>
    </header>
    
    <main>
      <slot />
    </main>
    
    <Footer />
    <Animations />
    <Snow />
  </body>
</html>

<style is:global>
  :root {
    --font-fallback: -apple-system, BlinkMacSystemFont, Segoe UI, Helvetica, Arial, sans-serif;
    --font-body: 'Cormorant Garamond', var(--font-fallback);
    --font-display: 'Cherry Bomb One', var(--font-fallback);
    --font-mono: 'Outfit', monospace;
    
    /* Light theme */
    --bg: #ffffff;
    --bg-accent: #f5f5f5;
    --text: #1a1a1a;
    --text-muted: #666666;
    --border: #e5e5e5;
    --primary: #ff6b6b;
    --secondary: #4ecdc4;
    
    /* Other variables */
    --content-width: 65ch;
    --header-height: 4rem;
  }

  /* Dark theme */
  html.dark {
    --bg: #1a1a1a;
    --bg-accent: #2a2a2a;
    --text: #ffffff;
    --text-muted: #a0a0a0;
    --border: #404040;
    --primary: #ff8585;
    --secondary: #66e3da;
  }

  /* Base styles */
  html {
    background-color: var(--bg);
    color: var(--text);
  }

  body {
    font-family: var(--font-body);
    line-height: 1.6;
    margin: 0;
    min-height: 100vh;
    display: flex;
    flex-direction: column;
  }

  header {
    padding: 2rem 1rem;
    text-align: center;
  }

  header h1 {
    margin: 0;
    font-family: var(--font-display);
    font-size: 2em;
  }

  header a {
    color: var(--text);
    text-decoration: none;
    transition: color 0.3s ease;
  }

  header a:hover {
    color: var(--primary);
  }

  main {
    flex: 1;
    width: 100%;
    max-width: var(--content-width);
    margin: 0 auto;
    padding: 0 1rem;
  }

  img {
    max-width: 100%;
    height: auto;
  }

  /* Transitions */
  ::view-transition-old(root),
  ::view-transition-new(root) {
    animation: none;
    mix-blend-mode: normal;
  }

  /* Ensure dark mode transitions smoothly */
  ::view-transition-old(root) {
    z-index: 1;
  }
  ::view-transition-new(root) {
    z-index: 2;
  }

  .dark::view-transition-old(root) {
    z-index: 2;
  }
  .dark::view-transition-new(root) {
    z-index: 1;
  }
</style> 